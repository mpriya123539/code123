{
  "variables":
  {
    "sshkey": "#{agenagentpoolvmpublickey}#",
    "admin_username":    "packer",
    "admin_password":    "#{packerpassword1}#",
    "client_id": "#{clientid}#",
    "client_secret": "#{clientsecret}#",
    "tenant_id": "#{tenantid}#",
    "subscription_id": "#{subid}#",
    "image_version": "1.0.0",
    "useridentity":"#{useridentity}#"
  },
  "builders": [{
    "type": "azure-arm",
    "client_id": "{{user `client_id`}}",
    "client_secret": "{{user `client_secret`}}",
    "tenant_id": "{{user `tenant_id`}}",
    "subscription_id": "{{user `subscription_id`}}",
    "managed_image_resource_group_name": "Packerrg",
    "managed_image_name": "packergallery",
    "user_assigned_managed_identities": "{{user `useridentity1`}}",
    "os_type": "Linux",
    "image_publisher": "OpenLogic",
    "image_offer": "CentOS",
    "image_sku": "8_2",
    "ssh_username":           "{{user `admin_username`}}",
    "ssh_password":           "{{user `admin_password`}}",
    "ssh_wait_timeout":       "20m",
    "location": "East US",
    "shared_image_gallery_destination": {
      "resource_group": "newlinuximagegallery",
      "gallery_name": "!!!!linuximage",
      "image_name": "linuximagedefinition",
      "image_version": "1.0.0",
      "replication_regions": [
        "East US"
      ]
    },
    "shared_image_gallery_timeout": "2h5m2s",
    "vm_size": "Standard_DS2_v2"
  }],
  "provisioners": [
    {
      "type":    "shell",
      "scripts": [
         "base/installsoftware.sh"

      ],
      "execute_command": "echo 'packer' | {{.Vars}} sudo -S -E bash '{{.Path}}'"
    }
    ]
}
